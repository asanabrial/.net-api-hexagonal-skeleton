{
    "AllowedHosts": "*",
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/AppLogs.log",
                    "rollingInterval": "Day",
                    "restrictedToMinimumLevel": "Warning"
                }
            }
        ],
        "Enrich": ["FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId"]
    },
    "ConnectionStrings": {
        "HexagonalSkeleton": "Host=localhost;Port=5432;Database=HexagonalSkeleton;Username=hexagonal_user;Password=hexagonal_password;",
        "HexagonalSkeletonRead": "mongodb://hexagonal_user:hexagonal_password@localhost:27017/HexagonalSkeletonRead?authSource=admin"
    },
    "MongoDb": {
        "DatabaseName": "HexagonalSkeletonRead"
    },
    "Debezium": {
        "Producer": {
            "BootstrapServers": "localhost:9092",
            "ClientId": "hexagonal-skeleton-producer",
            "Acks": "all",
            "Retries": 3,
            "BatchSize": 16384,
            "LingerMs": 1,
            "BufferMemory": 33554432
        },
        "Consumer": {
            "BootstrapServers": "localhost:9092",
            "GroupId": "hexagonal-skeleton-consumer-group",
            "AutoOffsetReset": "earliest",
            "EnableAutoCommit": false,
            "SessionTimeoutMs": 6000,
            "Topics": ["hexagonal.public.users"]
        }
    },
    "CDC": {
        "DebeziumConnectUrl": "http://localhost:8083",
        "PostgreSQL": {
            "Host": "postgresql",
            "Port": "5432",
            "User": "hexagonal_user",
            "Password": "hexagonal_password",
            "Database": "HexagonalSkeleton",
            "ServerName": "hexagonal-postgres",
            "SlotName": "hexagonal_slot",
            "PublicationName": "hexagonal_publication"
        },
        "TopicPrefix": "hexagonal",
        "TableIncludeList": "public.users"
    },
    "AppSettings": {
        "ContentUserFolder": "user",
        "ContentImgFolder": "img",
        "AllowedFileExtensions": [".png", ".jpg", ".jpeg", ".gif"],
