# Testing Performance Configuration

# Container timeouts (reduced for faster testing)
TEST_CONTAINER_TIMEOUT_MINUTES=1
TEST_CONTAINER_STARTUP_TIMEOUT_SECONDS=30

# Performance optimization
TEST_USE_SHARED_CONTAINERS=true
TEST_ENABLE_CONTAINER_LOGGING=false
TEST_CONTAINER_CLEANUP=true

# Database configurations
TEST_DATABASE_NAME=hexagonal_test_fast
TEST_DATABASE_USER=test_user
TEST_DATABASE_PASSWORD=test_password

# Container images (using alpine versions for faster startup)
TEST_POSTGRESQL_IMAGE=postgres:15-alpine
TEST_MONGODB_IMAGE=mongo:7.0-jammy

# Enable parallel testing
TEST_PARALLEL_EXECUTION=true
TEST_MAX_PARALLEL_TESTS=4

# Skip integration tests by default (use unit tests for speed)
TEST_SKIP_INTEGRATION=false
TEST_INTEGRATION_TIMEOUT_MINUTES=5
