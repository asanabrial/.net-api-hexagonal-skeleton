{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/HexagonalSkeleton.sln"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "start-database",
            "type": "shell",
            "command": "docker-compose up -d --wait && echo 'MariaDB ready'",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "build-and-start-db",
            "dependsOrder": "sequence",
            "dependsOn": [
                "build",
                "start-database"
            ],
            "group": "build"
        }
    ]
}